# Cloudflare Workers Environment Configuration
# Copy this to .env and update with your actual values

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Domain Configuration
PRODUCTION_DOMAIN=api.yourdomain.com
STAGING_DOMAIN=staging-api.yourdomain.com

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ENCRYPTION_MASTER_B64=your-encryption-key-base64-encoded
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Database (Supabase for Cloudflare Workers)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# OAuth Configuration
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=https://api.yourdomain.com/oauth/spotify/callback

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://api.yourdomain.com/oauth/linkedin/callback

YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=https://api.yourdomain.com/oauth/youtube/callback

# AWS/S3 Configuration (if needed)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
